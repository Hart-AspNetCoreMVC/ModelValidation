@model Appointment

@{
    ViewData["Title"] = "MakeBooking";
    Layout = "_Layout";
}



<div class="bg-success m-1 p-1 text-white"><h4>Your Appointment</h4></div>
    
    <hr />
    <table class="table  table-bordered">
        <tr>
            <th>Your Name: </th>
            <td>@Model.ClientName</td>
        </tr>        
        <tr>
            <th>Your Appointment Date: </th>
            <td>@Model.Date.ToString("d")</td>
        </tr>
    </table>
    <a class="btn btn-success" asp-action="Index">Make Another Appointment</a>


<div>
</div>
